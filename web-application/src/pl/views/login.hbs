<link rel="stylesheet" type="text/css" href="/css/login.css">

<div class="row align-form">
    <div class="col s12 m4 offset-m4">
        <div class="card">
            <div class="card-action  red lighten-2 white-text">
                <h3>Log in!</h3>
            </div>
            <form action="/account/login" method="POST">
                <div class="card-content">
                    <div class="form-field">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email">
                    </div><br>

                    <div class="form-field">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password">
                    </div><br>

                    <div class="form-field">
                        <button class="btn-large wave-effect waves-dark red lighten-2 login-button"
                            type="submit">Login</button>
                    </div><br>
                </div>
            </form>
        </div>
    </div>
</div>


{{!-- If we have any database or router error --}}
{{#if error}}
<div class="error-div">
    <p class="pink-centered-bold-text">The following errors occured when trying to log in: </p>
    <ul>
        {{#each error}}
        <li class="pink-centered-text">{{this}}</li>
        {{/each}}
    </ul>
</div>
{{/if}}


{{#if notLoggedInAsReg}}
    <p class="pink-centered-bold-text">"You have been directed here because you tried to access a page only available for logged in users. Please sign in or create an account."</p>
{{/if}}

{{#if notLoggedInAsAdmin}}
    <p class="pink-centered-bold-text">"You have been directed here because you tried to access a page only available for admin users. Please sign in as admin to reach this page."</p>
{{/if}}